<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.myweatheralert" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>myWeatherAlert</name>
    <description>
        Gather and display earthquake data live.
    </description>
    <author email="gsdhawan@sfu.ca" href="http://shdh.ca">
        Shawn Dhawan
    </author>
    <content src="index.html" />
    <access origin="*" />
    
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.GeoBroker" />
    </feature>

    <feature name="Toast">
        <param name="android-package" value="nl.xservices.plugins.Toast" />
    </feature>
</widget>
